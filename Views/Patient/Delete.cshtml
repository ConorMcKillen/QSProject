@model Patient

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/patient", "Patients"), ("", "Delete")})>

    <h3 class="mt-4 mb-4">Delete Patient</h3>
    <h4 class="mb-4">Are you sure you want to delete this patient?</h4>

    <div>
        <div class="col card rounded shadow pt-3">
            <dl class="row">
                <dt class="col-5">Name</dt>
                <dd class="col-7">@Model.Name</dd>

                <dt class="col-5">Age</dt>
                <dd class="col-7">@Model.Age</dd>

                <dt class="col-5">Email</dt>
                <dd class="col-7">@Model.Email</dd>
            </dl>
        </div>

        <div class="mt-4">
            <form asp-controller="Patient" asp-action="DeleteConfirm" type="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Confirm" class="btn btn-danger" />
                <a class="btn btn-secondary" asp-controller="Patient" asp-action="Index">Cancel</a>
            </form>
        </div>

    </div>